{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/conuti-gmbh/bo4e-schema/master/schemas/v1/bo/Berechnungsformel.schema.json",
  "title": "Berechnungsformel",
  "type": "object",
  "properties": {
    "boTyp": {
      "$ref": "../enum/BOTyp.schema.json",
      "default": "BERECHNUNGSFORMEL"
    },
    "versionStruktur": {
      "type": "string",
      "default": "1",
      "description": "versionStruktur"
    },
    "beginndatum": {
      "type": "string",
      "format": "date-time",
      "description": "beginndatum"
    },
    "notwendigkeit": {
      "$ref": "../enum/BerechnungsformelNotwendigkeit.schema.json"
    },
    "lieferrichtung": {
      "$ref": "../enum/Energierichtung.schema.json"
    },
    "rechenschrittId": {
      "type": "integer",
      "faker": {
        "number.int": {
          "min": 1,
          "max": 10
        }
      },
      "description": "rechenschrittId"
    },
    "rechenschritt": {
      "$ref": "../com/Rechenschritt.schema.json"
    },
    "rechenschritte": {
      "type": "array",
      "items": {
        "$ref": "../com/Rechenschritt.schema.json"
      },
      "description": "rechenschritte"
    },
    "verwendungszweck": {
      "type": "array",
      "items": {
        "$ref": "../com/Verwendungszweck.schema.json"
      },
      "description": "verwendungszweck"
    },
    "gueltigkeitszeitraum": {
      "$ref": "../com/Zeitraum.schema.json"
    }
  },
  "required": [
    "boTyp",
    "versionStruktur"
  ]
}

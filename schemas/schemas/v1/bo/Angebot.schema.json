{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/conuti-gmbh/bo4e-schema/master/schemas/v1/bo/Angebot.schema.json",
  "title": "Angebot",
  "type": "object",
  "properties": {
    "boTyp": {
      "$ref": "../enum/BOTyp.schema.json",
      "default": "ANGEBOT"
    },
    "versionStruktur": {
      "type": "string",
      "default": "1",
      "description": "versionStruktur"
    },
    "angebotsnummer": {
      "type": "string",
      "faker": {
        "string.numeric": 3
      },
      "description": "angebotsnummer"
    },
    "anfragereferenz": {
      "type": "string",
      "faker": {
        "string.binary": {
          "prefix": "REF",
          "length": 6
        }
      },
      "description": "anfragereferenz"
    },
    "angebotsdatum": {
      "type": "string",
      "format": "date-time",
      "description": "angebotsdatum"
    },
    "sparte": {
      "$ref": "../enum/Sparte.schema.json"
    },
    "bindefrist": {
      "type": "string",
      "format": "date-time",
      "description": "bindefrist"
    },
    "angebotgeber": {
      "$ref": "../bo/Geschaeftspartner.schema.json"
    },
    "angebotnehmer": {
      "$ref": "../bo/Geschaeftspartner.schema.json"
    },
    "unterzeichnerAngebotsnehmer": {
      "$ref": "../bo/Ansprechpartner.schema.json"
    },
    "unterzeichnerAngebotsgeber": {
      "$ref": "../bo/Ansprechpartner.schema.json"
    },
    "zeitspanneEinrichtungUebermittlungWerte": {
      "$ref": "../com/Zeitraum.schema.json"
    },
    "bindefristAngebot": {
      "$ref": "../com/Zeitraum.schema.json"
    },
    "varianten": {
      "type": "array",
      "items": {
        "$ref": "../com/Angebotsvariante.schema.json"
      },
      "description": "varianten"
    }
  },
  "required": [
    "boTyp",
    "versionStruktur"
  ]
}

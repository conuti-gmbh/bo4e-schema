{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/conuti-gmbh/bo4e-schema/master/schemas/v1/bo/Zaehler.schema.json",
  "title": "Zaehler",
  "type": "object",
  "properties": {
    "boTyp": {
      "$ref": "../enum/BOTyp.schema.json",
      "default": "ZAEHLER"
    },
    "versionStruktur": {
      "type": "string",
      "default": "1"
    },
    "zaehlernummer": {
      "type": "string",
      "faker": {
        "string.binary": {
          "prefix": "ZAEHLER_",
          "length": 6
        }
      }
    },
    "sparte": {
      "$ref": "../enum/Sparte.schema.json"
    },
    "zaehlerauspraegung": {
      "$ref": "../enum/Zaehlerauspraegung.schema.json"
    },
    "zaehlertyp": {
      "$ref": "../enum/Zaehlertyp.schema.json"
    },
    "tarifart": {
      "$ref": "../enum/Tarifart.schema.json"
    },
    "zaehlerkonstante": {
      "type": "number",
      "format": "float",
      "faker": {
        "number.float": {
          "multipleOf": 0.5,
          "min": 10,
          "max": 30
        }
      }
    },
    "eichungBis": {
      "type": "string",
      "format": "date-time"
    },
    "zaehlerhersteller": {
      "$ref": "Geschaeftspartner.schema.json"
    },
    "gateway": {
      "type": "string",
      "faker": {
        "string.binary": {
          "prefix": "GATEWAY_",
          "length": 6
        }
      }
    },
    "fernschaltung": {
      "$ref": "../enum/Fernschaltung.schema.json"
    },
    "messwerterfassung": {
      "$ref": "../enum/Messwerterfassung.schema.json"
    },
    "zaehlertypspezifikation": {
      "$ref": "../enum/ZaehlertypSpezifikation.schema.json"
    },
    "befestigungsart": {
      "$ref": "../enum/Befestigungsart.schema.json"
    },
    "zaehlergroesse": {
      "$ref": "../enum/Geraetemerkmal.schema.json"
    },
    "mengenumwertertyp": {
      "$ref": "../enum/Mengenumwertertyp.schema.json"
    },
    "volumenerfassung": {
      "$ref": "../enum/Volumenerfassung.schema.json"
    },
    "serialnummer": {
      "type": "string",
      "faker": {
        "string.numeric": 10
      }
    },
    "geraetemerkmal": {
      "$ref": "../enum/Geraetemerkmal.schema.json"
    },
    "herstellungsdatum": {
      "type": "string",
      "format": "date-time"
    },
    "baujahr": {
      "type": "string",
      "$comment": "DTM+Z03"
    },
    "messlokationsId": {
      "type": "string",
      "faker": {
        "string.numeric": 33
      }
    },
    "marktlokationsId": {
      "type": "string",
      "faker": {
        "string.numeric": 11
      }
    },
    "geraete": {
      "type": "array",
      "items": {
        "$ref": "../com/Geraet.schema.json"
      }
    },
    "zaehlwerke": {
      "type": "array",
      "items": {
        "$ref": "../com/Zaehlwerk.schema.json"
      }
    }
  },
  "required": [
    "boTyp",
    "versionStruktur"
  ]
}

{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/conuti-gmbh/bo4e-schema/master/schemas/v1/bo/Auftrag.schema.json",
  "type": "object",
  "properties": {
    "boTyp": {
      "$ref": "../enum/BOTyp.schema.json",
      "default": "AUFTRAG"
    },
    "versionStruktur": {
      "type": "string",
      "default": "1"
    },
    "ausfuehrungsdatum": {
      "type": "string",
      "format": "date-time"
    },
    "fertigstellungsdatum": {
      "type": "string",
      "format": "date-time"
    },
    "startdatum": {
      "type": "string",
      "format": "date-time"
    },
    "sparte": {
      "$ref": "../enum/Sparte.schema.json"
    },
    "lieferanschrift": {
      "$ref": "../com/Adresse.schema.json"
    },
    "marktlokationsId": {
      "type": "string",
      "faker": {
        "string.numeric": 11
      }
    },
    "mindestpreis": {
      "$ref": "../com/Preis.schema.json"
    },
    "hoechstpreis": {
      "$ref": "../com/Preis.schema.json"
    },
    "energierichtung": {
      "$ref": "../enum/Energierichtung.schema.json"
    },
    "berechnungspreis": {
      "type": "number",
      "format": "float",
      "faker": {
        "number.float": {
          "multipleOf": 0.25,
          "min": 1,
          "max": 10
        }
      }
    },
    "summeGesamt": {
      "type": "number",
      "format": "float",
      "faker": {
        "number.float": {
          "multipleOf": 0.25,
          "min": 10,
          "max": 20
        }
      }
    },
    "verschobenerAbmeldetermin": {
      "type": "string",
      "format": "date-time"
    },
    "behebungsZeitpunkt": {
      "type": "string",
      "format": "date-time"
    },
    "lieferadresseAltgeraete": {
      "$ref": "Geschaeftspartner.schema.json"
    },
    "definitionsTyp": {
      "$ref": "../enum/DefinitionsTyp.schema.json"
    },
    "positionsdaten": {
      "type": "array",
      "items": {
        "$ref": "../com/AuftragPosition.schema.json"
      }
    },
    "bemerkungen": {
      "type": "array",
      "items": {
        "type": "string",
        "faker": {
          "lorem.sentence": 5
        }
      }
    }
  },
  "required": [
    "boTyp",
    "versionStruktur"
  ]
}
